#!/usr/bin/python3

# import the os module
import os

# get the filename stored in the PYFILE environment variable
pyfile = os.getenv("PYFILE")

# check if PYFILE is set
if not pyfile:
    print("Error: Environment variable PYFILE is not set.")
    exit(1)

# check if the file exists
if not os.path.exists(pyfile):
    print(f"Error: File '{pyfile}' not found.")
    exit(1)

# run the Python script using the os.system() method
os.system(f"python {pyfile}")
